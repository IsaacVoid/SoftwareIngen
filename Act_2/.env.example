# Claves de firma (genera valores aleatorios largos)
SECRET_KEY=change_me_access_64_chars_min
REFRESH_SECRET_KEY=change_me_refresh_64_chars_min


# Expiraciones (minutos/d√≠as)
ACCESS_TOKEN_EXPIRES_MIN=15
